<%= render 'static_pages/home' unless current_user.admin? %>

<div class="row">
  <div class="col-lg-4"></div>
  <div class="col-lg-4">
    <h4>Add a New Chapter</h4>
    <%= link_to 'New Chapter', new_chapter_path, class: "btn btn-md btn-success" %>

  </div>
  <div class="col-lg-4">
    <h4>Add a Multiple Chapters</h4>
    <%= form_tag import_chapters_path, multipart: true, class:"form-group" do %>

    <%= file_field_tag :file %><%= submit_tag "UPLOAD", class: "btn btn-md btn-primary" %>
    <% end %>
  </div>
</div>

<div class="panel panel-default">
<div class="panel-heading">All Chapters</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>State Program</th>
      <th>Salesforce Id</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.name %></td>
        <td><%= chapter.state_program %></td>
        <td><%= chapter.salesforce_id %></td>

        <!-- Only delete and edit if admin -->
        <% if current_user.admin == true %>
          <td><%= link_to edit_chapter_path(chapter) do %>
            <i class="fa fa-pencil-square-o"> Edit</i>
            </td>
            <% end %>
          <td><%= link_to chapter, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash"> Delete</i>
            </td>
            <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
