<%= render 'static_pages/home' unless user_signed_in? %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>State Program</th>
      <th>Salesforce Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.name %></td>
        <td><%= chapter.state_program %></td>
        <td><%= chapter.salesforce_id %></td>

        <!-- Only delete and edit if admin -->
        <% if current_user.admin == true %>
          <td><%= link_to edit_chapter_path(chapter) do %>
            <i class="fa fa-pencil-square-o"> Edit</i>
            </td>
            <% end %>
          <td><%= link_to chapter, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash"> Delete</i>
            </td>
            <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- Only add new if Admin -->
<% if current_user.admin == true %>
  <%= link_to 'New Chapter', new_chapter_path %>
<% end %>
