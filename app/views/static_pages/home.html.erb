<% if user_signed_in? %>
	<div class="row announcement">
		<div class="col-lg-2 col-md-2 col-sm-2 col-xs-1">
		<%= image_tag("open-book.svg", class:"svg-icon") %>
		</div>
		<div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
			<h1>Hi there!</h1>
			<p class="lead"> Welcome to the portal. We're really excited to provide a space for SFER resources.</p>
		</div>
	</div>

	<div class="resource">
	  <div class="row">
	  	<div class="col-lg-3 col-md-3">
	  		<%= link_to page_path(pdf.serve('chapter-guide.pdf')) do %> 
	  			<%= fa_icon('search 4x', class:"img-circle") %>
	  		<% end %>
	  		<div class="fill-bottom">
	  		<h3>Chapter Guide</h3>
	  		<p>Let's get started!</p>
	  		</div>
	  	</div>
	  	<div class="col-lg-3 col-md-3">
	  		<div class="fill-top-alt">
	  			<%= image_tag("jeremy.jpg", class: "img-circle") %>
	  		</div>
	  		<div class="fill-bottom-alt">
	  			<h3>Recruitment Guide</h3>
	  			<p>Build your membership with these quick tips</p>
	  		</div>
	  	</div>
	  	<div class="col-lg-3 col-md-3">
	  		<i class="fa fa-twitter"></i>
	  		<h3>Membership expectations</h3>
	  		<p>Our roadmap to guide our work</p>
	  	</div>
	  	<div class="col-lg-3 col-md-3">
	  		<i class="fa fa-twitter"></i>
	  		<h3>Capacity Captain Training</h3>
	  		<p>Here's a recap of our CC training in Boston</p>
	  	</div>
	  </div><!-- end row -->
	  <div class="row">
			<h1>Summit Resources</h1>

	  </div>
	</div>

<% else %>
	<div class="jumbotron">

	<h1>SFER Resource Portal</h1>
	<p>
		<%= link_to "Log in", new_user_session_path, class: "btn btn-success btn-lg" %>
		<%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
	</p>
	</div>
	<div class="row center">
		<div class="col-lg-4 col-md-4">
			<%= fa_icon('book 2x', class: "blue-circle")  %>
			<h4>Sign in to get resources</h4>
			<p class="text-muted">We're putting the best SFER resources up on the portal to help you and your chapter.</p>
		</div>
		<div class="col-lg-4 col-md-4">
			<%= fa_icon('arrow-up 2x', class: "blue-circle")  %>
			<h4>Big plans for updates</h4>
			<p class="text-muted">We want to make a space for members to get high-quality training, share their work and more.</p>
		</div>
		<div class="col-lg-4 col-md-4">
			<%= fa_icon('location-arrow 2x', class: "blue-circle")  %>
			<h4>Handmade in Minnesota</h4>
			<p class="text-muted">Well, it is sort of handmade. It involved a lot of typing.</p>
		</div>
	</div>
	<% end %>
